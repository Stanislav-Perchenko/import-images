<resources>
    <attr name="app_statusbar_height" format="dimension"/>
    <attr name="app_topbar_background" format="reference|color"/>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/AllButtons</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen">
        <!-- The View.SYSTEM_UI_FLAG_LAYOUT_STABLE and View.SYSTEM_UI_FLAG_LAYOUT_FULLSCREEN flags
         are set in code instead of the "android:windowTranslucentStatus" property, so the
         "android:statusBarColor" property works! -->
        <!--item name="android:windowTranslucentStatus">true</item-->

        <item name="android:windowBackground">@android:color/white</item>
        <item name="app_statusbar_height">24dp</item>
        <item name="app_topbar_background">@drawable/bg_toolbar_gradient</item>
    </style>

    <style name="ThemeForDarkContainers" parent="ThemeOverlay.AppCompat.Dark"/>


    <style name="AllButtons" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="AllDialogs" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>